# Fresh County Admin React - Production Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://freshcounty.com/api
NEXT_PUBLIC_API_BASE_URL=https://freshcounty.com/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=Fresh County Admin
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Secure admin panel for Fresh County e-commerce platform

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Security Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=900000

# MFA Configuration
NEXT_PUBLIC_MFA_ISSUER=Fresh County
NEXT_PUBLIC_MFA_DIGITS=6
NEXT_PUBLIC_MFA_PERIOD=30

# UI Configuration
NEXT_PUBLIC_PAGINATION_LIMIT=20
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Chart Configuration
NEXT_PUBLIC_CHART_ANIMATION=true
NEXT_PUBLIC_CHART_RESPONSIVE=true

# Toast Configuration
NEXT_PUBLIC_TOAST_DURATION=4000
NEXT_PUBLIC_TOAST_POSITION=top-right

# Debug Configuration (Production - Disabled)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=false

# Performance Configuration
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_CACHE_STATIC_ASSETS=true