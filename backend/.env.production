# Production Environment Configuration for Live Server
# Copy this to your live server as .env

# Database Configuration
DB_HOST=localhost
DB_NAME=[username]_freshcounty_prod
DB_USER=[username]_fcuser
DB_PASSWORD=your_secure_database_password
DB_PORT=3306

# Server Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://freshcounty.com/api
BACKEND_URL=https://freshcounty.com

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_different_from_jwt
JWT_EXPIRE_TIME=1h
JWT_REFRESH_EXPIRE_TIME=7d

# Email Configuration (Namecheap Email)
SMTP_HOST=mail.freshcounty.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@freshcounty.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=Fresh County <noreply@freshcounty.com>
EMAIL_REPLY_TO=support@freshcounty.com

# Upload Configuration
UPLOAD_PATH=/home/fresyzgq/public_html/uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
FRONTEND_URL=https://freshcounty.com
ADMIN_URL=https://admin.freshcounty.com

# Session Configuration
SESSION_SECRET=your_session_secret_minimum_32_characters

# Redis Configuration - DISABLED for shared hosting
# Leave REDIS_HOST empty to completely disable Redis
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=